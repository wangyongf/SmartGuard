<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yongf="http://schemas.android.com/apk/res/com.yongf.smartguard"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yongf.smartguard.SettingActivity">

    <TextView
        android:background="#8866ff00"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="22sp"
        android:id="@+id/tv_home"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:text="设置中心" />

    <com.yongf.smartguard.ui.SettingItemView
        yongf:title="设置自动更新"
        yongf:desc_on="自动更新已经开启"
        yongf:desc_off="自动更新已经关闭"
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.yongf.smartguard.ui.SettingItemView>

    <com.yongf.smartguard.ui.SettingItemView
        yongf:title="来电显示号码归属地"
        yongf:desc_on="来电显示号码归属地已经开启"
        yongf:desc_off="来电显示号码归属地已经关闭"
        android:id="@+id/siv_show_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.yongf.smartguard.ui.SettingItemView>

    <com.yongf.smartguard.ui.SettingClickView
        android:id="@+id/scv_changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.yongf.smartguard.ui.SettingClickView>

    <com.yongf.smartguard.ui.SettingItemView
        android:id="@+id/siv_call_sms_safe"
        yongf:desc_off="黑名单拦截已经关闭"
        yongf:desc_on="黑名单拦截已经开启"
        yongf:title="黑名单拦截设置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.yongf.smartguard.ui.SettingItemView>

</LinearLayout>
