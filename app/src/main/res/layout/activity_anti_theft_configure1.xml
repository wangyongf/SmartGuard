<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yongf.smartguard.AntiTheftConfigureActivity1">

    <TextView
        android:id="@+id/tv_anti_theft_configure"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="1. 欢迎使用手机防盗"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_width="fill_parent"
        android:layout_height="55dip" />

    <TextView
        android:text="您的手机防盗卫士："
        style="@style/anti_theft_config_text_content_style"
        />

    <TextView
        android:text="SIM卡变更报警"
        style="@style/anti_theft_config_text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
         />

    <TextView
        android:text="GPS追踪"
        style="@style/anti_theft_config_text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <TextView
        android:text="远程数据销毁"
        style="@style/anti_theft_config_text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <TextView
        android:text="远程锁屏"
        style="@style/anti_theft_config_text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@android:drawable/presence_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@android:drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/setup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            style="@style/anti_theft_config_button_next_style"
             />

    </RelativeLayout>

</LinearLayout>
